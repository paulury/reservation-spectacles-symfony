{% block title %}Accueil - R√©servation de Spectacles{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">üé≠ NOS PETITS SPECTACLE</a>
        
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    {# Liens pour l'utilisateur connect√© #}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_mes_reservations') }}">üìã Mes R√©servations</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="{{ path('admin') }}">‚öôÔ∏è Admin</a>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-danger btn-sm ms-2" href="{{ path('app_logout') }}">D√©connexion</a>
                    </li>
                {% else %}
                    {# Liens pour l'utilisateur d√©connect√© #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary btn-sm ms-2" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <h1 class="mb-4 text-center">Spectacles √† l'affiche</h1>

    {# Messages Flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        {% for s in spectacles %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">{{ s.titre }}</h5>
                        <p class="badge bg-success fs-5">{{ s.prix }} ‚Ç¨</p>
                        <p class="text-muted">
                            Disponibilit√© : <strong>{{ s.nombrePlace }} places</strong>
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-4">
                        {% if s.nombrePlace > 0 %}
                            <a href="{{ path('app_reservation', {'id': s.id}) }}" class="btn btn-primary w-100">
                                R√©server
                            </a>
                        {% else %}
                            <button class="btn btn-secondary w-100" disabled>Complet</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun spectacle trouv√©.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}