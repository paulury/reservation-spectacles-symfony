{% extends 'base.html.twig' %}

{% block title %}Réserver - {{ spectacle.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white p-4">
                    <h2 class="h4 mb-0">Réserver pour : {{ spectacle.titre }}</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <p class="fs-5 mb-1 text-dark">Prix par place : <strong>{{ spectacle.prix }} €</strong></p>
                        <p class="text-danger fw-bold">Places encore disponibles : {{ spectacle.placesRestantes }}</p>
                    </div>
                    
                    <hr class="my-4">

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.quantite, "Combien de places souhaitez-vous ?", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.quantite) }}
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-success btn-lg w-100 mt-3 shadow">
                            <i class="fas fa-check-circle me-2"></i>Confirmer ma réservation
                        </button>
                    {{ form_end(form) }}
                    
                    <div class="text-center mt-4">
                        <a href="{{ path('app_home') }}" class="text-decoration-none text-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Annuler et revenir à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}